@model RegisterViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - FilmMVC</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>

    <div class="register-container">
        <h2 class="form-title"> Kayıt Ol</h2>

        <form asp-action="Register" method="post" class="register-form">
            <div class="form-group">
                <label asp-for="Email" class="control-label"> Email</label>
                <div class="input-wrapper">
                    <i class="fas fa-envelope"> </i>
                    <input asp-for="Email" class="form-control" placeholder="Email adresinizi girin" />
                </div>
                <span asp-validation-for="Email" class="text-danger"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"> Şifre</label>
                <div class="input-wrapper">
                    <i class="fas fa-lock"> </i>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi girin" />
                </div>
                <span asp-validation-for="Password" class="text-danger"> </span>
            </div>
            <button type="submit" class="btn btn-primary btn-block"> Onayla</button>
            <div class="login-link">
                <p>Zaten bir hesabınız var mı? <a href="@Url.Action("Login", "Auth")" class="link">&nbspGiriş Yapın</a></p>
            </div>
        </form>
    </div>

</body>
</html>
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(to right, #1c92d2, #f2fcfe);
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .register-container {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .register-container:before {
            content: '';
            position: absolute;
            top: -150%;
            right: -150%;
            width: 300%;
            height: 300%;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            z-index: 0;
            animation: pulse 6s infinite ease-in-out;
        }

    .form-title {
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
        font-weight: 700;
        color: #333;
        z-index: 1;
        position: relative;
    }

    .register-form {
        z-index: 1;
        position: relative;
    }

        .register-form .form-group {
            margin-bottom: 1.5rem;
        }

            .register-form .form-group label {
                font-weight: 500;
                color: #555;
                display: block;
                text-align: left;
                margin-bottom: 0.5rem;
                font-size: 1rem;
            }

    .input-wrapper {
        position: relative;
    }

        .input-wrapper i {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #bbb;
            font-size: 1.1rem;
        }

    .register-form .form-control {
        padding: 0.75rem 0.75rem 0.75rem 2.5rem;
        border: 1px solid #ddd;
        border-radius: 6px;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s, box-shadow 0.3s;
        font-size: 1rem;
        background: #f9f9f9;
        outline: none;
    }

        .register-form .form-control:focus {
            border-color: #1c92d2;
            box-shadow: 0 0 8px rgba(28, 146, 210, 0.3);
            background: #fff;
        }

    .register-form .text-danger {
        color: #e74c3c;
        margin-top: 0.5rem;
        display: block;
        font-size: 0.875rem;
        text-align: left;
    }

    .btn-block {
        display: block;
        width: 100%;
        padding: 0.75rem;
        font-size: 1.1rem;
        font-weight: 500;
        background-color: #1c92d2;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .btn-block:hover {
            background-color: #157ab3;
            box-shadow: 0 0 10px rgba(21, 122, 179, 0.3);
        }

    .form-footer {
        margin-top: 2rem;
        font-size: 0.875rem;
        color: #777;
    }

        .form-footer a {
            color: #1c92d2;
            text-decoration: none;
            transition: color 0.3s;
        }

            .form-footer a:hover {
                color: #157ab3;
            }

    .login-link {
        text-align: center;
        margin-top: 20px;
    }

        .login-link p {
            color: #aaa;
        }

        .login-link .link {
            color: #157ab3;
            text-decoration: none;
            font-weight: bold;
        }

            .login-link .link:hover {
                text-decoration: underline;
            }
</style>

