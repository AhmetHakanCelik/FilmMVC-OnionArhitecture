@model FilmsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - FilmMVC</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
        }

        .card-body {
            padding: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-text {
            color: #6c757d;
        }

        .btn-lg {
            font-size: 1.25rem;
            padding: 0.75rem 1.5rem;
        }

        .form-control {
            border-radius: 0.375rem;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075);
        }

        .shadow-lg {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="card shadow-lg">
            <div class="card-body">
                <form asp-action="CreateFilms" method="post" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label asp-for="FilmName" class="form-label">Film İsmi</label>
                        <input asp-for="FilmName" class="form-control" placeholder="Film ismi girin" />
                        <div class="form-text">Lütfen bir film ismi girin.</div>
                        <span asp-validation-for="FilmName" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Image" class="form-label">Film Resmi</label>
                        <input asp-for="Image" type="file" class="form-control" />
                        <div class="form-text">Film eklemek için bir resim yükleyin.</div>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
                        <input asp-for="CategoryName" class="form-control" placeholder="Kategori ismi girin" />
                        <div class="form-text">Lütfen bir kategori girin.</div>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary btn-lg">Film Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
  </body>
</html>
